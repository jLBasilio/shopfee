{
  "manifest_version": 3,
  "name": "Shopfee",
  "description": "Calculate your Shopee expenditures",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}